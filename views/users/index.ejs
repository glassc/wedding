<div class="control-group form-inline"   style = "padding-bottom:25px;" data-bind="validationElement: newUserEmailAddress">
    <div class="controls">
        <input type = "text" placeholder = "email" id = "email" data-bind =  "value: newUserEmailAddress, valueUpdate: 'afterkeydown'"/> <button class = "btn" data-bind= "command: AddNewUserCommand">Add</button>
    </div>
</div>

<table class = "table table-hover">
 <thead>
        <tr><th>Email</th><th></th></tr>
    </thead>
    <tbody data-bind = "foreach: users">
        <tr data-bind = "event: { mouseover: ToggleSelected, mouseout: ToggleSelected }">
            <td data-bind="text: email"></td>
            <td><button class = "close" data-bind = "visible: selected, click: Remove">&times;</button></td>
        </tr>
    </tbody>
</table>