<style>
    .selected-image {
        outline: 2px dashed #0088cc;
    }
    
</style>

<div id = "imagebrowser" class="modal hide fade"  role="dialog"  style="width: 730px;">
    <div class="modal-header">
        <button type="button" class="close" data-bind = "click: Cancel" aria-hidden="true">&times;</button>
        <h3>Images</h3>
    </div>
    
    <div class="modal-body" style = "height: 500; overflow-y:scroll;">
      <ul  class="thumbnails" data-bind = "foreach: Images">
        <li style = "width: 155px; height: 155px;">
            <div data-bind = "css: { 'selected-image':$parent.IsSelected($index()) }" style = "width: 100%; height: 100%; text-align: center; padding-top:2px;" >
            <a href = "#" data-bind = "click: function() {$parent.SelectImage($index());}" style = "width: 155px; height: 155px;display:table">
                <img data-bind = "attr: {src: url}" style = "max-width: 150px; max-height: 150px;"/>   
            </a>
            </div>
        </li>  
       
    </ul>
    
    <input type = "file" id = "image-browser-file-upload" style = "display: none" data-bind = "event: {change: UploadImage}" />
    </div>
    
    <div class="modal-footer">
        <a href = "#" class = "pull-left" data-bind = "click: ShowFileChooser"><i class="icon-upload"></i> Upload a new image</a>
        <button href="#" class="btn btn-primary" data-bind = "command: OKCommand">OK</button>
        <a href="#" class="btn"  data-bind = "click: Cancel">Cancel</a>
    </div>
</div>