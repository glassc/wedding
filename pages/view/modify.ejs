<script type="text/html"  id = "gallery-content-template">
    <ul  class="thumbnails" data-bind = "sortable: { data : images }" >
    
        <li data-bind = "event: { mouseover: ToggleSelected, mouseout: ToggleSelected }">
            <div data-bind = "template: View" ></div>            
        </li>  
    </ul>
        
    <ul class="thumbnails">
            <li >
            <a href ="#"  data-bind = "click: ShowFileChooser"  class="thumbnail" style = "width: 150px; height: 150px;text-align: center;vertical-align: middle; display: table-cell; border-style: dashed" >
                Click here to upload an image
            </a>
            
            <input type="file" id = "file_upload" style = "display: none;" data-bind = "event: {change: UploadImage}"/>
                
        </li>
    </ul>
</script>

<script type="text/html" id = "gallery-content-template-edit">
     <div class = "thumbnail" style = "width: 700px; height: 400px;text-align: center;">
        <img data-bind = "attr: {src: image}" style = "max-width:95%; max-height: 300px;padding-bottom:15px">
        <textarea style = "width: 95%; height: 85px;" data-bind = "value:caption"></textarea>
        <div style = "text-align:right">
            <button class = "btn" data-bind = "click: $parent.GalleryMode">Close</button>
            <button class = "btn btn-danger" data-bind = "click: $parent.Remove">Remove</button>
        </div>
    </div>
</script>

<script type="text/html" id = "gallery-content-template-small">
    <div class = "thumbnail" style = "width: 150px;height: 150px;display: table-cell">
        <a href = "#" data-bind = "click: $parent.Edit">
            <img data-bind = "attr: {src: image}" style = "max-width:150px; max-height: 150px;padding-bottom:15px">
            <div data-bind = "text: caption" style = "max-width:150px; max-height: 25px;overflow-y:hidden"></div>
        </a>
    </div>
</script>